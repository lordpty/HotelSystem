<h2 class="mb-4">Room <%= room.room_number %> Details</h2>

<ul class="list-group w-50 mx-auto">
  <li class="list-group-item"><strong>Room Number:</strong> <%= room.room_number %></li>
  <li class="list-group-item"><strong>Room Type:</strong> <%= room.room_type.charAt(0).toUpperCase() + room.room_type.slice(1) %></li>
  <li class="list-group-item">
    <strong>Status:</strong>
    <% if (room.is_booked) { %>
      <span class="badge bg-danger">Booked</span>
    <% } else { %>
      <span class="badge bg-success">Available</span>
    <% } %>
  </li>
</ul>

<div class="mt-4 text-center">
  <a href="/rooms/<%= room.id %>/edit" class="btn btn-warning me-2">Edit Room</a>
  <form 
    action="/rooms/<%= room.id %>/delete" 
    method="POST" 
    class="d-inline" 
    onsubmit="return confirm('Are you sure you want to delete this room?');"
  >
    <button type="submit" class="btn btn-danger">Delete Room</button>
  </form>
  <a href="/rooms" class="btn btn-secondary ms-2">Back to Rooms</a>
</div>
