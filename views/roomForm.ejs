<h2 class="mb-4"><%= title %></h2>

<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger w-75 mx-auto">
    <ul class="mb-0">
      <% errors.forEach(error => { %>
        <li><%= error %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form
  action="<%= room.id ? '/rooms/' + room.id + '/edit' : '/rooms' %>"
  method="POST"
  class="w-75 mx-auto"
>
  <div class="mb-3">
    <label for="room_number" class="form-label">Room Number</label>
    <input
      type="text"
      id="room_number"
      name="room_number"
      class="form-control"
      required
      value="<%= room.room_number || '' %>"
    />
  </div>

  <div class="mb-3">
    <label for="room_type" class="form-label">Room Type</label>
    <select id="room_type" name="room_type" class="form-select" required>
      <option value="" disabled <% if(!room.room_type) { %>selected<% } %>>Select a room type</option>
      <option value="single" <%= room.room_type === 'single' ? 'selected' : '' %>>Single</option>
      <option value="double" <%= room.room_type === 'double' ? 'selected' : '' %>>Double</option>
      <option value="suite"  <%= room.room_type === 'suite'  ? 'selected' : '' %>>Suite</option>
    </select>
  </div>

  <div class="form-check mb-3">
    <input
      class="form-check-input"
      type="checkbox"
      id="is_booked"
      name="is_booked"
      <%= room.is_booked ? 'checked' : '' %>
    />
    <label class="form-check-label" for="is_booked">Booked</label>
  </div>

  <button type="submit" class="btn btn-primary">
    <%= room.id ? 'Update Room' : 'Add Room' %>
  </button>
  <a href="/rooms" class="btn btn-secondary ms-2">Cancel</a>
</form>
