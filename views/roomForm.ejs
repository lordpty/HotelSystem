<section class="admin-form my-5">
  <div class="container" style="max-width: 500px;">
    <h2>Add Room</h2>

    <form action="/rooms" method="POST">
      <div class="form-group">
        <label for="room_name">Room Name</label>
        <input 
          type="text" 
          id="room_name" 
          name="room_number" 
          class="form-control" 
          required 
          value="<%= room?.room_number || '' %>" 
        />
      </div>

      <div class="form-group">
        <label for="room_type">Room Type</label>
        <select id="room_type" name="room_type" class="form-control" required>
          <option value="" disabled <%= !room?.room_type ? 'selected' : '' %>>Select</option>
          <option value="single" <%= room?.room_type === 'single' ? 'selected' : '' %>>Classic Single Room</option>
          <option value="double" <%= room?.room_type === 'double' ? 'selected' : '' %>>Classic Double Room</option>
          <option value="suite" <%= room?.room_type === 'suite' ? 'selected' : '' %>>VIP Room</option>
        </select>
      </div>

      <div class="form-group">
        <label for="room_price">Room Price</label>
        <input 
          type="number" 
          id="room_price" 
          name="room_price" 
          class="form-control" 
          required 
          value="<%= room?.room_price || '' %>"
          min="0"
          step="0.01"
        />
      </div>

      <div class="form-group">
        <label for="room_description">Room Description</label>
        <textarea 
          id="room_description" 
          name="room_description" 
          rows="5" 
          placeholder="Description Room" 
          class="form-control"
          ><%= room?.room_description || '' %></textarea>
      </div>

      <div class="form-group">
        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
          <span id="payment-button-amount">Add Room</span>
          <span id="payment-button-sending" style="display:none;">Sendingâ€¦</span>
        </button>
      </div>
    </form>
  </div>
</section>
