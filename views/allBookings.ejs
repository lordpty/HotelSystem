<h2 class="mb-4">All Bookings</h2>

<% if (!bookings || bookings.length === 0) { %>
  <div class="alert alert-info w-75 mx-auto" role="alert">
    No bookings found.
  </div>
<% } else { %>
  <div class="table-responsive w-100 mx-auto">
    <table class="table table-bordered table-striped align-middle">
      <thead class="table-primary">
        <tr>
          <th>ID</th>
          <th>Guest Name</th>
          <th>Room Number</th>
          <th>Room Type</th>
          <th>Check-In</th>
          <th>Check-Out</th>
          <th>Payment Status</th>
          <th>Booked At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.id %></td>
            <td><%= booking.guest_name %></td>
            <td><%= booking.room_number %></td>
            <td><%= booking.room_type.charAt(0).toUpperCase() + booking.room_type.slice(1) %></td>
            <td><%= booking.check_in.toISOString().slice(0,10) %></td>
            <td><%= booking.check_out.toISOString().slice(0,10) %></td>
            <td>
              <% if (booking.payment_status === 'paid') { %>
                <span class="badge bg-success text-uppercase"><%= booking.payment_status %></span>
              <% } else { %>
                <span class="badge bg-warning text-uppercase"><%= booking.payment_status %></span>
              <% } %>
            </td>
            <td><%= booking.created_at %></td>
            <td>
              <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-outline-primary me-1">Edit</a>
              <form action="/booking/<%= booking.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>
